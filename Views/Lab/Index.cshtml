@model IEnumerable<Laboratorios_CampusTech.Models.Laboratorio>

@{
    ViewData["Title"] = "Laboratorios";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Mensaje"] is string msg)
{
    <div class="alert alert-success" role="alert">
        @msg
    </div>
}

<p>
    <a class="btn btn-primary" asp-controller="Lab" asp-action="Create">Formulario Reserva</a>
</p>

@if (!Model.Any())
{
    <p>No existe ninguna reservación de momento</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código Reserva</th>
                <th>Nombre Profesor</th>
                <th>Correo Institucional</th>
                <th>Laboratorio</th>
                <th>Fecha Reserva</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Motivo</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var l in Model)
            {
                <tr>
                    <td>@l.CodRes</td>
                    <td>@l.ProfName</td>
                    <td>@l.InstEmail</td>
                    <td>@l.LabName</td>
                    <td>@l.FechaRes.ToString("dd/MM/yyyy")</td>
                    <td>
                        @(l.HoraInicio.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture)
                            .Replace("AM", "a.m").Replace("PM", "p.m"))
                    </td>
                    <td>
                        @(l.HoraFin.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture)
                            .Replace("AM", "a.m").Replace("PM", "p.m"))
                    </td>
                    <td>@l.Motivo</td>
                </tr>
            }
        </tbody>
    </table>
}