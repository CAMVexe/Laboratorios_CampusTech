@model Laboratorios_CampusTech.Models.Laboratorio

@{
    ViewData["Title"] = "Formulario de Reserva de Laboratorio";
}

<style>
    .lab-card-header {
        background: linear-gradient(90deg, #0b5ed7 0%, #198754 100%);
        color: #ffffff;
    }
    .lab-card-subtitle {
        color: rgba(255,255,255,0.9);
        font-size: 0.95rem;
    }
    .lab-help {
        font-size: 0.9rem;
        color: #6c757d;
    }
    .lab-required {
        color: #dc3545;
        margin-left: 4px;
    }
    .form-actions {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
</style>

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header lab-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">Formulario de Reserva</h4>
                    <div class="lab-card-subtitle">Reserva de laboratorios — Ingeniería Informática</div>
                </div>
                <div>
                    <small class="text-white-50">CampusTech</small>
                </div>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CodRes" class="form-label"></label>
                        <input asp-for="CodRes" class="form-control" placeholder="Ej: R-2025-01" />
                        <span class="text-danger" asp-validation-for="CodRes"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProfName" class="form-label"></label>
                        <input asp-for="ProfName" class="form-control" placeholder="Nombre del profesor" />
                        <span class="text-danger" asp-validation-for="ProfName"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InstEmail" class="form-label"></label>
                        <input asp-for="InstEmail" class="form-control" placeholder="correo@institucion.edu" />
                        <span class="text-danger" asp-validation-for="InstEmail"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LabName" class="form-label"></label>
                        <select asp-for="LabName" class="form-select" required>
                            <option value="">Seleccione...</option>
                            @if (ViewBag.Labs is IEnumerable<string> labs)
                            {
                                foreach (var lab in labs)
                                {
                                    <option value="@lab" selected="@(Model?.LabName == lab ? "selected" : null)">@lab</option>
                                }
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="LabName"></span>
                        <div class="lab-help mt-1">Seleccione el laboratorio disponible para la reserva.</div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaRes" class="form-label"></label>
                        <input asp-for="FechaRes" type="date" class="form-control" />
                        <span class="text-danger" asp-validation-for="FechaRes"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraInicio" class="form-label"></label>
                        <input asp-for="HoraInicio" class="form-control" />
                        <span class="text-danger" asp-validation-for="HoraInicio"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraFin" class="form-label"></label>
                        <input asp-for="HoraFin" class="form-control" />
                        <span class="text-danger" asp-validation-for="HoraFin"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Motivo" class="form-label"></label>
                        <input asp-for="Motivo" class="form-control" placeholder="Descripcion de la reserva" />
                        <span class="text-danger" asp-validation-for="Motivo"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between align-items-center">
                    <div class="lab-help">Todos los campos son revisados por el sistema. Si la reserva colisiona será rechazada.</div>
                    <div class="form-actions">

                        <button type="submit" class="btn btn-primary">
                            Ingresar Reserva
                        </button>

                        <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>